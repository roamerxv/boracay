    <!--<value>/WEB-INF/views/</value>-->
    <!--</property>-->
    <!--<property name="suffix">-->
    <!--<value>.jsp</value>-->
    <!--</property>-->
    <!--</bean>-->

    <!-- 激活自动代理功能 -->
    <aop:aspectj-autoproxy proxy-target-class="true"/>

</beans>
